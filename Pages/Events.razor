@page "/events"
@inject NavigationManager NavigationManager

<h1>Upcoming Events</h1>

@if (events == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        @foreach (var evt in events)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@evt.Title</h5>
                        <p class="card-text">@evt.Description</p>
                        <p class="card-text"><small class="text-muted">@evt.Date.ToShortDateString()</small></p>
                        <button class="btn btn-primary" @onclick="() => NavigateToBooking(evt.Id)">Book Now</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Event> events;

    protected override void OnInitialized()
    {
        // TODO: Replace with actual data fetching from a service
        events = new List<Event>
        {
            new Event { Id = 1, Title = "Summer Concert", Description = "Annual summer music festival", Date = DateTime.Now.AddDays(30) },
            new Event { Id = 2, Title = "Tech Conference", Description = "Latest in technology and innovation", Date = DateTime.Now.AddDays(45) },
            new Event { Id = 3, Title = "Food Fair", Description = "Taste cuisines from around the world", Date = DateTime.Now.AddDays(60) }
        };
    }

    private void NavigateToBooking(int eventId)
    {
        NavigationManager.NavigateTo($"/booking/{eventId}");
    }

    public class Event
    {
        public int Id { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
        public DateTime Date { get; set; }
    }
}