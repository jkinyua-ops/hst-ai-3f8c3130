@page "/events"

<MudText Typo="Typo.h3" GutterBottom="true">Upcoming Events</MudText>

<MudGrid>
    @foreach (var evt in events)
    {
        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardMedia Image="@evt.ImageUrl" Height="200" />
                <MudCardContent>
                    <MudText Typo="Typo.h5">@evt.Title</MudText>
                    <MudText Typo="Typo.body2">@evt.Description</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Book Now</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>

@code {
    private List<Event> events = new List<Event>
    {
        new Event { Title = "Concert in the Park", Description = "Enjoy live music in the open air", ImageUrl = "images/concert.jpg" },
        new Event { Title = "Tech Conference 2023", Description = "The latest in technology and innovation", ImageUrl = "images/tech-conf.jpg" },
        new Event { Title = "Food Festival", Description = "Taste cuisines from around the world", ImageUrl = "images/food-fest.jpg" },
    };

    public class Event
    {
        public string Title { get; set; }
        public string Description { get; set; }
        public string ImageUrl { get; set; }
    }
}